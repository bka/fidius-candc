
<% if HostInterface.all.empty? %>
  <ul>
    <li> <b>No Firefox-Form-Data available</b>
  </ul>
<% else %>

<div class="divTable">
  <div class="rowContent">
    <div class="cell" style="padding-right:15px;">
      <h3>Interface-Data</h3>
    </div>
    <div class="cell">
      <form name="example" action="#" onsubmit='hideElement("inter"); return false'>
          <input type="submit" name="submit" value="+"/>
      </form>
    </div>
  </div>
</div>

  <table id="inter" style="display:none">
  <tr>
    <th>Name</th>
    <th>Ip</th>
    <th>Mac</th>
    <th>DHCPServer</th>
    <th>DNS-Suffix</th>
  </tr>
  <% HostInterface.all.each do |tupel| %>
    <tr>
      <td><%= tupel.name %></td>
      <td><%= tupel.address %></td>
      <td><%= tupel.mac%></td>
      <td><%= tupel.DHCPServer%></td>
      <td><%= tupel.dns_suffix%></td>
   </tr>
  <% end %>
  </table>
<% end %>
