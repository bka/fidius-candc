<span id="nvd-entries">
  <% if @show_nvd %>
    <table>
      <tr>
        <th>CVE</th>
        <th>Description</th>
      </tr>
      <%= render :partial => 'nvd_entry', :collection => @nvd_entries %>
    </table>
  <% else %>
    <a href="#" class="ui-button" id="search_nvdentries">Search NVD Entries</a>
  <% end %>
  <br />
  <div id="centerBox">
    <%= render :partial => 'nvd_entry_info', :collection => @nvd_entries %>
  </div>
</span>

<script>
  $(function() {
    $("#search_nvdentries").button();
    $("#search_nvdentries").click(function() { nvd_entries(<%= @host.id %>) });
  });
</script>