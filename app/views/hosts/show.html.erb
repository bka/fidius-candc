<h1>Host <%= @host.name %> (<%= @host.name %>)</h1>

<h2>Services</h2>
    <% @host.interfaces.each do |interface| %>
      <h3><%= interface.ip %></h3>
      <%= render :partial => "services/services_from_host", :locals => { :services => interface.services } %>
   <% end %>
<h2>Sessions</h2>
<%= render :partial => "services/sessions_from_host", :locals => { :sessions => @host.exploited_hosts } %>

<%= render :partial => "services/active_connections_from_host", :locals => { :sessions => @host.exploited_hosts } %>

<%= render :partial => "services/tasklist_from_host", :locals => { :sessions => @host.exploited_hosts } %>

<%= render :partial => "services/frfx_from_host", :locals => { :sessions => @host.exploited_hosts } %>
